{
  "compilerOptions": {
    "lib": ["es6"],
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es6",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "baseUrl": "./src"
  },
  "include": ["src/**/*"]
}
